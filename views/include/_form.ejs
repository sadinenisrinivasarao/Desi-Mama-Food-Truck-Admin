 <!-- form handling -->
 <form action="/api/foodItems" method="POST" id="add_foodItem">
    <div class="new_foodItem">
        
                <div class="form-group">
                    <label for="item" class="text-light"><b>Item name</b></label>
                    <input type="text" name="item" placeholder="Bonda">
                </div>
                <div class="form-group">
                    <label for="price" class="text-light"><b>Price</b></label>
                    <input type="text" name="price" placeholder="20">
                </div>
                <div class="form-group">
                    <label for="category" class="text-light"><b>Category name</b></label>
                    <div class="radio inline">
                        <input type="radio" id="radio-1" name="category" value="Staters/Maggi" checked>
                        <label for="radio-1" class="text-light">Staters/ Maggi</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="category" value="Breakfast">
                        <label for="radio-2" class="text-light">Breakfast</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="category" value="Drinks/Chai">
                        <label for="radio-3" class="text-light">Drinks/ Chai</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-6" name="category" value="Indo-Chinese">
                        <label for="radio-6" class="text-light">Indo-Chinese</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-7" name="category" value="Snacks">
                        <label for="radio-7" class="text-light">Snacks</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-8" name="category" value="Chats">
                        <label for="radio-8" class="text-light">Chats</label>
                    </div>
                </div>
        
                <div class="form-group">
                    <label for="todayspecial" class="text-light"><b>Todayâ€™s Special</b></label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="todayspecial" value="yes" checked>
                        <label for="radio-4" class="text-light">Yes</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="todayspecial" value="no">
                        <label for="radio-5" class="text-light">No</label>
                    </div>
                </div>
        
                <div class="form-group">
                    <button type="submit" class="submit-btn"><b>Save</b></button>
                </div>
            
        

    </div>
</form>