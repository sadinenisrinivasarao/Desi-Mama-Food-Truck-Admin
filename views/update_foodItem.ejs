
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All foodItems</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update foodItem</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add foodItem form -->
         <!-- form handling -->
         <form method="POST" id="update_foodItem">
            <div class="new_foodItem">
                <div class="form-group">
                    <label for="item" class="text-light"><b>Item</b></label>
                    <input type="hidden" name="id" value="<%= foodItem._id %>">
                    <input type="text" name="item" value="<%= foodItem.item %>" placeholder="Bonda">
                </div>
                <div class="form-group">
                    <label for="price" class="text-light"><b>Price</b></label>
                    <input type="text" name="price" value="<%= foodItem.price %>" placeholder="20">
                </div>
                <div class="form-group">
                    <label for="category" class="text-light"><b>Category</b></label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="category" value="Staters/Maggi" <%= foodItem.category === 'Staters/Maggi' ? 'checked' : '' %>>
                        <label for="radio-2" class="text-light">Staters/Maggi</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="category" value="Breakfast" <%= foodItem.category === 'Breakfast' ? 'checked' : '' %>>
                        <label for="radio-3" class="text-light">Breakfast</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="category" value="Drinks/Chai" <%= foodItem.category === 'Drinks/Chai' ? 'checked' : '' %>>
                        <label for="radio-4" class="text-light">Drinks/Chai</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-7" name="category" value="Indo-Chinese" <%= foodItem.category === 'Indo-Chinese' ? 'checked' : '' %>>
                        <label for="radio-7" class="text-light">Indo-Chinese</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-8" name="category" value="Snacks" <%= foodItem.category === 'Snacks' ? 'checked' : '' %>>
                        <label for="radio-8" class="text-light">Snacks</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="todayspecial" class="text-light"><b>Todayâ€™s Special</b></label>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="todayspecial" value="yes" <%= foodItem.todayspecial === 'yes' ? 'checked' : '' %>>
                        <label for="radio-5" class="text-light">Yes</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-6" name="todayspecial" value="no" <%= foodItem.todayspecial === 'no' ? 'checked' : '' %>>
                        <label for="radio-6" class="text-light">No</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="submit-btn"><b>Save</b></button>
                </div>
            </div>
        </form>

       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
